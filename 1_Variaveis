#include <iostream>
using namespace std;

int main(){
  /*
  Há diversos tipos de variáveis, dentre elas: int, float, double, char, string;
  int: o int é basicamente um número inteiro. EX: 1,128,10;
  float: float é um número decimal. EX: 1.23, 45.23;
  double é um float com o dobro de capacidade de armazenamento. EX: 23.23231231;
  char: é um caractere. EX: 'A', 't';
  string: é um conjunto de caracteres. EX: "Isso eh uma string", "string";
  Note que ao usar char devemos usar aspas simples, string usamos aspas duplas;
  */
  
  int inteiro = 10;
  float decimal = 2.23;
  double decduplo = 2.23232323;
  char carac = 'a';
  string palavra = "Isso eh uma string";
}
